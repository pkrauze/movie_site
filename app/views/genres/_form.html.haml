= form_for(genre) do |f|
  - if genre.errors.any?
    #error_explanation
      %h2
        = pluralize(genre.errors.count, "error")
        prohibited this genre from being saved:
      %ul
        - genre.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.file_field :images, multiple: true, accept: "image/jpeg, image/jpg, image/gif, image/png"
  .actions
    = f.submit
