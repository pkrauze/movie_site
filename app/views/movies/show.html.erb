<p id="notice"><%= notice %></p>

<p>
  <%= image_tag @movie.cover.url %>
</p>

<p>
  <strong>Title:</strong>
  <%= @movie.title %>
</p>

<p>
  <strong>Desc:</strong>
  <%= @movie.desc %>
</p>

<p>
  <strong>Year:</strong>
  <%= @movie.year %>
</p>

<p>
  <strong>Time:</strong>
  <%= @movie.time %>
</p>
<%= link_to 'Destroy', @movie, method: :delete, data: { confirm: 'Are you sure?' } %>
<%= link_to 'Edit', edit_movie_path(@movie) %> |
<%= link_to 'Back', movies_path %>


<h3>Comments</h3>
<%= form_for [@movie, Comment.new] do |f| %>
<%= f.text_area :body, placeholder: "Add a comment" %><br/>
<%= f.submit "Add Comment" %>
<% end %>

<ul>
  <%= render(partial: 'comments/comment', collection: @movie.comments) %>
</ul>