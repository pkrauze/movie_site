<h3 class="text-center">Movies for Sale</h3>

<div class="row">
  <div class="col-xs-6 col-xs-offset-3">
    <% movies.each do |movie| %>
    <div class="movie_r">
      <%= render "movie_row", movie: movie, order_item: @order_item %>
    </div>
    <% end %>
  </div>
  <%= link_to 'New Movie', new_movie_path %><
</div>