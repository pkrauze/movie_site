<p id="notice"><%= notice %></p>

<h1>Listing Directors</h1>

<table>
  <thead>
    <tr>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>Year of birth</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% directors.each do |director| %>
      <tr>
        <td><%= director.firstname %></td>
        <td><%= director.lastname %></td>
        <td><%= director.year_of_birth %></td>
        <td><%= link_to 'Show', director %></td>
        <td><%= link_to 'Edit', edit_director_path(director) %></td>
        <td><%= link_to 'Destroy', director, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% if !sub_director_exist(current_user.id, director.id) %>
        <td><%= link_to 'Subscribe', subscribers_subscribe_path(director_id: director.id) %></td>
        <% else %>
        <td><%= link_to 'Unsubscribe', subscribers_unsubscribe_path(director_id: director.id) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

