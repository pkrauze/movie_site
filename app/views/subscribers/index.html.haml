%div.top-bar
%div.container
    %h1 You're subscribing...
    
    %h2 directors:
    
    - @subscribed_directors.each do |s|
        %p
            %span= s.director.fullname
            = link_to unsubscribe_path(director_id: s.director.id) do
                %i.glyphicon.glyphicon-remove
        
    %h2 genres:
        
    - @subscribed_genres.each do |s|
        %p
            %span= s.genre.name
            = link_to unsubscribe_path(genre_id: s.genre.id) do
                %i.glyphicon.glyphicon-remove